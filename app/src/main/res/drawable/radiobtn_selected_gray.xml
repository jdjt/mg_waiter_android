<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" android:state_enabled="true">
        <shape>
            <solid android:color="@color/title_bg" />

            <corners android:bottomLeftRadius="4dp" android:bottomRightRadius="0dp" android:topLeftRadius="4dp" android:topRightRadius="4dp" />
        </shape>
    </item>
    <item android:state_checked="false" android:state_enabled="true">

        <shape>
            <solid android:color="@color/half_full" />
            <stroke android:width="1dp" android:color="@color/gray_btn_false"/>
            <padding android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="1dp" />
            <corners android:bottomLeftRadius="4dp" android:bottomRightRadius="4dp" android:topLeftRadius="4dp" android:topRightRadius="4dp" />
        </shape>
    </item>

</selector>