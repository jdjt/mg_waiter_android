<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--按钮样式 -->
    <style name="AppBtn">
        <item name="android:layout_height">53dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <!-- <item name="android:textStyle">bold</item> -->
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:background">@drawable/setbtn_bg</item>
        <item name="android:textColor">@drawable/text_state_whitetogreen</item>
        <item name="android:textSize">@dimen/textsize_28</item>
    </style>


    <!--按钮样式 -->
    <style name="btn_task">
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:background">@drawable/setbtn_bg</item>
        <item name="android:textColor">@drawable/text_state_whitetogreen</item>
        <item name="android:textSize">@dimen/textsize_32</item>
    </style>

    <style name="ActionBarPopupThemeOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="PopuAnimation">
        <item name="android:windowEnterAnimation">@anim/popu_enter</item>
        <item name="android:windowExitAnimation">@anim/popu_exit</item>
    </style>

    <style name="PopupPullFromBottomAnimation">
        <item name="android:windowEnterAnimation">@anim/popu_pull_enter</item>
        <item name="android:windowExitAnimation">@anim/popu_pull_exit</item>
    </style>

    <!--Dialog-->
    <style name="custom_dialog" parent="@android:style/Theme.Dialog">
        <!-- Dialog的windowFrame框为无 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否半透明 -->
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/fm_circle_gray</item>
        <!-- 背景是否模糊显示 -->
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="Theme.Custom" parent="@android:style/Widget.CalendarView">
        <item name="android:calendarViewStyle">@style/Widget.CalendarView.Custom</item>
    </style>
    <style name="Widget.CalendarView.Custom" parent="android:Widget.CalendarView">
        <item name="android:focusedMonthDateColor">@color/text_gray_lable</item>
        <item name="android:unfocusedMonthDateColor">@color/nomalGray</item>
        <item name="android:weekNumberColor">@color/title_bg</item>
        <item name="android:minDate">01/01/1900</item>
        <item name="android:shownWeekCount">5</item>
        <item name="android:firstDayOfWeek">2</item>
        <item name="android:selectedDateVerticalBar">@color/half_full</item>
        <!--<item name="android:weekDayTextAppearance">@android:style/TextAppearance.Small.CalendarViewWeekDayView</item>-->
        <item name="android:dateTextAppearance">@style/CustomDayTextAppearance</item>
        <!--<item name="android:weekDayTextAppearance">@style/TextAppearance.Medium</item>-->
        <!--<item name="android:dateTextAppearance">@style/TextAppearance.Medium</item>-->
    </style>
    <style name="CustomDayTextAppearance"
        parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@drawable/calender_text_date_bg</item>
    </style>
</resources>
