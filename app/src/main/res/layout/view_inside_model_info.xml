<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <RelativeLayout
        android:background="@drawable/fm_half_green"
        android:layout_width="match_parent"
        android:layout_height="50dp">


        <TextView
            android:text="纳米日本料理"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:id="@+id/fm_window_model_tv_title"
            android:textStyle="bold"/>


        <TextView
            android:text="餐厅大王棕酒店"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:layout_marginBottom="1dp"
            android:layout_alignBottom="@+id/fm_window_model_tv_title"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/fm_window_model_tv_title"
            android:id="@+id/fm_window_model_tv_address"/>

    </RelativeLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_gravity="center_vertical"
        android:background="@drawable/fm_half_white"
        android:layout_height="50dp">

        <com.fengmap.drpeng.widget.DrawableCenterTextView
            android:text="到这去"
            android:gravity="center_vertical"
            android:layout_weight="1.0"
            android:drawablePadding="10dp"
            android:drawableLeft="@mipmap/fm_w_arrive"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/green"
            android:textSize="14sp"
            android:id="@+id/fm_window_model_tv_arrive"/>

        <View
            android:background="@color/color_divider"
            android:layout_gravity="center_vertical"
            android:visibility="gone"
            android:layout_width="0.5dp"
            android:layout_height="16dp" />

        <com.fengmap.drpeng.widget.DrawableCenterTextView
            android:text="详情"
            android:visibility="gone"
            android:gravity="center_vertical"
            android:layout_weight="1.0"
            android:textSize="14sp"
            android:textColor="@color/green"
            android:drawableLeft="@mipmap/fm_w_enter"
            android:drawablePadding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/fm_window_model_tv_detail"/>

    </LinearLayout>


</LinearLayout>