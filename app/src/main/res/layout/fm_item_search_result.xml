<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="70dp">


    <ImageView
        android:src="@mipmap/fm_search_loca"
        android:layout_alignParentLeft="true"
        android:scaleType="centerInside"
        android:id="@+id/fm_item_search_result_left_img"
        android:layout_width="40dp"
        android:layout_height="match_parent"/>


    <LinearLayout
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/fm_item_search_result_left_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/fm_item_search_result_name"
            android:textSize="16sp"
            android:text="红树林电影世界"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="电影"
                android:textSize="14sp"
                android:id="@+id/fm_item_search_result_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="・"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="国际会议大厦二层"
                android:textSize="14sp"
                android:textColor="@color/gray_light"
                android:id="@+id/fm_item_search_result_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>



    </LinearLayout>




</RelativeLayout>